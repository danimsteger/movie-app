{{! My reviews page displays all reviews for the logged-in user }}
<section>
  <div class='d-flex justify-content-center'>
    <div class='card text-center col-11 m-4'>
      <div class='card-header'>
        <ul class='nav nav-tabs card-header-tabs'>
          <li class='nav-item'>
            <a class='nav-link' aria-current='true' href='/users/movies'>My
              Movies</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link active' href='/users/reviews'>My Reviews</a>
          </li>
        </ul>
      </div>
      <div class='card-body lighter'>
        <h4 class='card-text'>
          View all your movie reviews here. You can delete them, too!
        </h4>
        <div class='d-flex flex-wrap justify-content-center'>

          {{! Creates a card for each review for that user }}
          {{#each reviews as |review|}}
            <div class='card m-5 col-4 thick'>

              {{! Card displays the movies title, poster, review content, and stars for rating }}
              <div class='card-header d-flex justify-content-between'><h2
                  class='ml-4'
                >{{review.movie.title}}</h2>
                <h2>{{review_stars rating}}</h2>
              </div>
              <div class='row card-body dark'>
                <div class='col-md-6 d-flex'>
                  {{! Movie poster image links to individual movie page }}
                  <a href='/movies/{{review.movie.id}}'><img
                      src='{{review.movie.poster}}'
                      class='img-fluid rounded-start'
                      alt='{{review.movie.title}} Poster'
                    />
                  </a>
                </div>
                <div class='col-md-4 mt-5'>
                  <div class='row my-5'>
                    <h5 class='card-text'>
                      {{review.review}}
                    </h5>
                  </div>
                  <div class='row d-flex my-5'>
                    {{! Delete button allows a user to delete the review from the database }}
                    <button
                      class='btn btn-primary m-2 dlt-btn'
                      data-reviewId='{{review.id}}'
                      id='delete-btn'
                    >DELETE</button>

                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

  </div>

</section>
<script src='/js/deleteReview.js'></script>