<section class='m-5 flex'>
  <div class='card text-center col-11 justify-content-center'>
    <div class='card-header'>Leave a Review for INSERT MOVIE TITLE HERE!!</div>
    <div class='card-body flex row'>
      <div class='col-3'>
        THIS IS THE SPECIFIC MOVIE PIC
        <img
          src='https://m.media-amazon.com/images/I/51sBtK24saL._SX300_SY300_QL70_FMwebp_.jpg'
          class='img-fluid rounded-start'
          alt='Titantic Poster'
        />
      </div>
      <div class='col-8 d-flex align-items-center'>
        <form class='form new-review-form'>

          <div class='row mb-4 justify-content-center'>
            <label for='movieRating' class='col-sm-3 col-form-label'>Rating:
            </label>
            <div class='col-sm-8'>
              <div class='form-check form-check-inline'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='ratingOptions'
                  id='rating-1'
                  value='1'
                />
                <label
                  class='form-check-label'
                  for='rating-1'
                  value='1'
                >⭐</label>
              </div>
              <div class='form-check form-check-inline'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='ratingOptions'
                  id='rating-2'
                  value='2'
                />
                <label
                  class='form-check-label'
                  for='rating-2'
                  value='2'
                >⭐⭐</label>
              </div>
              <div class='form-check form-check-inline'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='ratingOptions'
                  id='rating-3'
                  value='3'
                />
                <label
                  class='form-check-label'
                  for='rating-3'
                  value='3'
                >⭐⭐⭐</label>
              </div>
              <div class='form-check form-check-inline'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='ratingOptions'
                  id='rating-4'
                  value='4'
                />
                <label
                  class='form-check-label'
                  for='rating-4'
                  value='4'
                >⭐⭐⭐⭐</label>
              </div>
              <div class='form-check form-check-inline'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='ratingOptions'
                  id='rating-5'
                  value='5'
                />
                <label
                  class='form-check-label'
                  for='rating-5'
                  value='5'
                >⭐⭐⭐⭐⭐</label>
              </div>
            </div>
          </div>

          <div class='row mb-4 mt-4 justify-content-center'>
            <label for='reviewContent' class='col-sm-3 col-form-label'>Review:
            </label>
            <div class='col-sm-8'>
              <textarea class='form-control' id='reviewContent'></textarea>
            </div>
          </div>
          <div class='my-4'>
            <button
              type='submit'
              class='btn btn-primary'
              id='review-submit-btn'
            >Post Review</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

